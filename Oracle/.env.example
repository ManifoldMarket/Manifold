# Aleo Oracle Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Your Aleo private key for signing oracle transactions
ORACLE_PRIVATE_KEY=APrivateKey1...

# REQUIRED: Aleo node URL (testnet or mainnet)
ALEO_NODE_URL=https://api.explorer.aleo.org/v1

# REQUIRED: Etherscan API key for fetching ETH supply
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# PostgreSQL Configuration
# Option 1: Connection String (Recommended for SSL/Channel Binding)
# DATABASE_URL=postgresql://user:password@host:5432/oracle_db?sslmode=require&channel_binding=require

# Option 2: Detailed Parameters
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=oracle_db

# OPTIONAL: How often to check markets (in seconds)
CHECK_INTERVAL=300

# OPTIONAL: Twitter scraping fallback (if using paid service)
SCRAPER_API_KEY=

# OPTIONAL: CoinMarketCap API key (for price fallback)
COINMARKETCAP_API_KEY=

# OPTIONAL: Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# OPTIONAL: Telegram bot for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
